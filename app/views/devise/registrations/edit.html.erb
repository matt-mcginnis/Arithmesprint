<div class="container edit-container">
    <div class="col-md-12 edit-col">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>

            <h1>Edit<%= resource_name.to_s.humanize %></h1>
            <div class="form-group">
                <%= f.label :email %><br/>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, placeholder: "Enter your name", class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :username %>
                <%= f.text_field :username, placeholder: "Choose a username", class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :location %>
                <%= f.text_field :location, placeholder: "Enter your location", class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :bio %>
                <%= f.text_area :bio, placeholder: "Tell us about yourself", class: "form-control" %>
            </div>

            <div class="form-group">
                <strong>Upload a Profile Picture</strong>
                <%= f.file_field :avatar, class: "form-control"%>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for:
                    <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group">
                <%= f.label :password %>
                <i>(leave blank if you don't want to change it)</i><br/>
                <%= f.password_field :password, autocomplete: "new-password" %>
                <% if @minimum_password_length %>
                    <br/>
                    <em><%= @minimum_password_length %>
                        characters minimum</em>
                <% end %>
            </div>

            <div class="field">
                <%= f.label :password_confirmation, style: "margin-bottom: 0px;" %><br/>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "margin-top: 0px;" %>
            </div>

            <div class="form-group">
                <%= f.label :current_password, style: "margin-bottom: 0px;" %>
                <i>(we need your current password to confirm your changes)</i><br/>
                <%= f.password_field :current_password, autocomplete: "current-password", style: "margin-top: 0px;" %>
            </div>

            <div class="actions">
                <%= f.submit "Update" %>
            </div>

            <%= link_to "Back", :back %>
            <h3>Cancel my account</h3>

            <p>
                <i>Unhappy?</i>
                <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
                <br>
            </p>
        <% end %>
    </div>
</div>
