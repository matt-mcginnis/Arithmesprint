<div class="container signup-container">
    <div class="col-md-12 login-col">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <h1>Sign up</h1>

            <div class="form-group">
                <%= f.label :email %><br/>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, placeholder: "Enter your name", class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :username %>
                <%= f.text_field :username, placeholder: "Choose a username", class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :location %>
                <%= f.text_field :location, placeholder: "Enter your location", class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :bio %>
                <%= f.text_area :bio, placeholder: "Tell us about yourself", class: "form-control" %>
            </div>

            <div class="form-group">
                <strong>Upload a Profile Picture</strong>
                <%= f.file_field :avatar, class: "form-control"%>
            </div>

            <div class="form-group">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %>
                        characters minimum)</em>
                <% end %><br/>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :password_confirmation %><br/>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="actions">
                <%= f.submit "Sign up" %>
            </div>
            <%= render "devise/shared/links" %>
        <% end %>
    </div>
</div>
